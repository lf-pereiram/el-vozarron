<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.uniquindio.android.electiva.el_vozarron.Activities.logic.TrainerDetails"
    android:background="#8d0202"
    android:focusable="false">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView3"
        android:src="@drawable/adele"
        android:layout_below="@+id/textView14NombreTrainer"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Adele"
        android:id="@+id/textView14NombreTrainer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Previous"
        android:id="@+id/textViewPrevious"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/TexViewNext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Genero:"
        android:id="@+id/textView17Genero"
        android:textColor="#fffdfd"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Biography:"
        android:id="@+id/textView18Historial"
        android:textColor="#fffdfd"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView17Genero"
        android:layout_alignStart="@+id/textView14NombreTrainer" />

    <ScrollView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/scrollView"
        android:layout_toEndOf="@+id/textView18Historial"
        android:layout_below="@+id/textView18Historial"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textViewPrevious">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textView15Biography"
            android:textColor="#fffdfd" />
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Singers"
        android:id="@+id/button3SingerPerTrainer"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
