<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_margin="6dp"
    card_view:cardBackgroundColor="@color/cardview_dark_background"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="7dp"
    android:id="@+id/resumen_personajes">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#000000">

        <ImageView
            android:id="@+id/imagen"
            android:src="@drawable/personaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="10dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/fecha_nacimiento"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imagen"
            android:text="Prueba" />
        <TextView
            android:id="@+id/fecha_nacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="33/33/3333"
            android:layout_alignStart="@+id/nombre"
            android:layout_below="@+id/nombre"
            android:textColor="#ffffff" />
    </RelativeLayout>
</android.support.v7.widget.CardView>




