<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_margin="6dp"
    card_view:cardBackgroundColor="@color/cardview_dark_background"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="7dp"
    android:id="@+id/resumen_personajes">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#000000">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/active"
            android:id="@+id/imageView2"
            android:layout_above="@+id/textView1SingerVotes"
            android:layout_alignEnd="@+id/textView1SingerVotes" />

        <ImageView
            android:id="@+id/imagen"
            android:src="@drawable/personaje"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:maxHeight="10dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/fecha_nacimiento"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imagen"
            android:text="Prueba" />
        <TextView
            android:id="@+id/fecha_nacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="33/33/3333"
            android:layout_alignStart="@+id/nombre"
            android:layout_below="@+id/nombre"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="link: "
            android:id="@+id/textViewSingerLink"
            android:textColor="#ffffff"
            android:layout_below="@+id/imagen"
            android:layout_alignStart="@+id/imagen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Trainer:"
            android:id="@+id/textViewEntrandorDelConcursante"
            android:textColor="#ffffff"
            android:layout_below="@+id/textViewSingerLink"
            android:layout_alignStart="@+id/textViewSingerLink" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Job:"
            android:id="@+id/textView14SingerJob"
            android:textColor="#ffffff"
            android:layout_below="@+id/textViewEntrandorDelConcursante"
            android:layout_alignStart="@+id/textViewEntrandorDelConcursante" />

        <TextView
            android:id="@+id/textView1SingerVotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000 Votes"
            android:textColor="#ffffff"
            android:layout_below="@+id/nombre"
            android:layout_alignEnd="@+id/imagen" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView4"
            android:src="@drawable/active"
            android:layout_alignBottom="@+id/textView14SingerJob"
            android:layout_alignEnd="@+id/imagen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView14"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView14SingerJob"
            android:layout_alignEnd="@+id/nombre" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView15"
            android:textColor="#ffffff"
            android:layout_below="@+id/imageView4"
            android:layout_toEndOf="@+id/textViewEntrandorDelConcursante" />

    </RelativeLayout>
</android.support.v7.widget.CardView>




