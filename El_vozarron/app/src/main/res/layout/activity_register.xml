<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.uniquindio.android.electiva.el_vozarron.Activities.logic.Register"
    android:background="#8d0202">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name: "
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView4"
        android:layout_marginTop="29dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView6"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Link:"
        android:id="@+id/textView7"
        android:textColor="#ffffff"
        android:layout_above="@+id/editText6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Trainer: "
        android:id="@+id/textView8"
        android:textColor="#ffffff"
        android:layout_above="@+id/buttonRegister"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp" />

    <EditText
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:inputType="date"
        android:ems="10"

        android:background="#000000"
        android:textColor="#ffffff"        android:id="@+id/editText"
        android:layout_alignStart="@+id/editText3"
        android:layout_below="@+id/textView4" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:text=" "
        android:ems="10"
        android:background="#000000"
        android:textColor="#ffffff"
        android:id="@+id/editText2"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView9" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/editText3"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_above="@+id/textView6"
        android:layout_alignStart="@+id/editText4" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/editText4"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/editText2" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/editText5"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignStart="@+id/editText4" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/editText6"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignStart="@+id/editText5" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Add Singer"
        android:id="@+id/buttonRegister"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Singer Register"
        android:id="@+id/textView9"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <EditText
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:inputType="date"
        android:ems="10"
        android:background="#000000"
        android:textColor="#ffffff"
        android:id="@+id/editText7"
        android:layout_marginStart="24dp"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textView6" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:inputType="date"
        android:ems="10"
        android:background="#000000"
        android:textColor="#ffffff"
        android:id="@+id/editText8"
        android:layout_alignTop="@+id/editText7"
        android:layout_alignEnd="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DD/MM/AAAA"
        android:id="@+id/textView10"
        android:textColor="#ffffff"
        android:layout_above="@+id/textView5"
        android:layout_toStartOf="@+id/editText8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Id: "
        android:id="@+id/textView11"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/editText3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Birth Date:"
        android:id="@+id/textView5"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignEnd="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Job:"
        android:id="@+id/textView12"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/editText4"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Link:"
        android:id="@+id/textView13"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentStart="true" />

</RelativeLayout>
